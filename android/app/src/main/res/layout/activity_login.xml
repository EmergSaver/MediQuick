<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:id="@+id/main_login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 아이디 라벨 -->
        <TextView
            android:id="@+id/textId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이메일 (EMAIL)"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 아이디 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/insertId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/textId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_edittext"
                android:hint="이메일 입력"
                android:padding="5dp"
                android:textSize="13sp"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 비밀번호 라벨 -->
        <TextView
            android:id="@+id/textPw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="비밀번호 (PW)"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/insertId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ✅ 비밀번호 입력 (별표 + 눈 아이콘 토글) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/insertPw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/textPw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            app:endIconMode="password_toggle"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">
            <!-- 비민번호 옆에 눈 -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                android:textSize="13sp"
                android:hint="비밀번호 입력"

                android:background="@drawable/login_edittext"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 자동 로그인 -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:buttonTint="@color/blue_gray"
            app:layout_constraintTop_toBottomOf="@id/insertPw"
            app:layout_constraintStart_toStartOf="parent" />

        <!--   로그인 오류 시 텍스트    -->
        <TextView
            android:id="@+id/loginError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 정보가 일치하지 않습니다."
            android:textAlignment="center"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btLogin"
            app:layout_constraintTop_toBottomOf="@+id/cbAuto"
            tools:layout_editor_absoluteX="40dp" />

        <!-- 버튼들 (색/간격은 이전과 동일) -->
        <Button
            android:id="@+id/btLogin"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:text="로그인"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_btn"
            app:backgroundTint="@color/blue_navy"
            app:cornerRadius="12dp"
            android:letterSpacing="0.2"
            app:layout_constraintTop_toBottomOf="@id/cbAuto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="또는"
            android:textSize="12sp"
            android:textColor="#9AA0A6"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btKakao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/kakao_login"
            android:scaleType="fitXY"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/Or"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Signup"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:text="회원가입"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue_navy"
            android:background="@drawable/rounded_btn"
            android:textAllCaps="false"
            android:letterSpacing="0.2"
            app:layout_constraintTop_toBottomOf="@id/btKakao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
