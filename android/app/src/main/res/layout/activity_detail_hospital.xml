<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/detail_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvHospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="건양대학교병원"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 미니맵(이미지 자리) -->
        <com.kakao.vectormap.MapView
            android:id="@+id/miniMap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="#EDEDED" />

        <!-- 길 안내 시작 -->
        <Button
            android:id="@+id/btnStartNavi"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="길 안내 시작" />

        <!-- 주소 -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="대전 서구 관저로 158" />

        <!-- 전화 -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="1577-3330" />

        <!-- 혼잡도 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/viewCongestionDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#22A447" />

            <TextView
                android:id="@+id/tvCongestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="보통" />
        </LinearLayout>

        <!-- 진료 정보 (간단 리스트 예시) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="진료 정보"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/boxDepts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F5F6F7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내과 · 40명" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="외과 · 15명" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="영상의학과 · 14명" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
