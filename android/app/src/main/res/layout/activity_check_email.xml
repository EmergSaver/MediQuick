<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:padding="40dp"
    android:id="@+id/main_email">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이메일 인증"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 안내 문구 (이메일 주소 포함 안내) -->
        <TextView
            android:id="@+id/tvGuide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="입력하신 이메일로 인증 메일을 보냈습니다.\n인증 메일의 확인(Verify) 링크를 누른 뒤 아래 버튼으로 인증 완료를 확인하세요."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 보조 문구 -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="메일이 안 보이면 스팸함을 확인하세요."
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvGuide" />

        <!-- 인증 메일 재전송 (Outlined) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResend"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_btn"
            android:textColor="@color/blue_navy"
            android:text="인증 메일 재전송"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHint" />

        <!-- 메일 앱 열기 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_btn"
            android:text="메일 앱 열기"
            android:layout_marginTop="12dp"
            android:textColor="@color/blue_navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnResend" />

        <!-- 인증 완료 확인 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerifyDone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="인증 완료 확인"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/blue_navy"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/btnOpenEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
