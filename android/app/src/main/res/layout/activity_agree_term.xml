<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp"
    android:id="@+id/main_agree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약관 동의"
            android:textSize="22sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbTermsService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[필수] 이용약관 동의"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/cbTermsPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[필수] 개인정보 처리방침 동의"/>

        <CheckBox
            android:id="@+id/cbTermsMarketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[선택] 마케팅 정보 수신 동의"/>

        <TextView
            android:id="@+id/tvHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="필수 항목에 동의해야 가입이 가능합니다."
            android:textSize="12sp"
            android:textColor="#667085"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgree"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="동의하고 계속"
                android:textAllCaps="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="취소"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
