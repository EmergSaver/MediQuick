<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알레르기 정보 입력"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_allergy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음식 알레르기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:background="@drawable/allergy_rounded_background"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/grid_food_allergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_allergy_title">

        <CheckBox android:id="@+id/cb_egg" android:text="난류(계란)" />
        <CheckBox android:id="@+id/cb_milk" android:text="밀" />
        <CheckBox android:id="@+id/cb_peach" android:text="복숭아" />
        <CheckBox android:id="@+id/cb_dairy" android:text="우유" />
        <CheckBox android:id="@+id/cb_sesame" android:text="참깨" />
        <CheckBox android:id="@+id/cb_tomato" android:text="토마토" />
        <CheckBox android:id="@+id/cb_buckwheat" android:text="메밀" />
        <CheckBox android:id="@+id/cb_almond" android:text="아몬드" />
        <CheckBox android:id="@+id/cb_sulfur_dioxide" android:text="아황산류" />
        <CheckBox android:id="@+id/cb_peanut" android:text="땅콩" />
        <CheckBox android:id="@+id/cb_mackerel" android:text="고등어" />
        <CheckBox android:id="@+id/cb_pork" android:text="돼지고기" />
        <CheckBox android:id="@+id/cb_soybean" android:text="대두" />
        <CheckBox android:id="@+id/cb_crab" android:text="꽃게" />
        <CheckBox android:id="@+id/cb_chicken" android:text="닭고기" />
        <CheckBox android:id="@+id/cb_walnut" android:text="호두" />
        <CheckBox android:id="@+id/cb_shrimp" android:text="새우" />
        <CheckBox android:id="@+id/cb_beef" android:text="쇠고기" />
        <CheckBox android:id="@+id/cb_clam" android:text="잣" />
        <CheckBox android:id="@+id/cb_squid" android:text="오징어" />
        <CheckBox android:id="@+id/cb_shellfish" android:text="조개류" />
    </GridLayout>

    <TextView
        android:id="@+id/tv_drug_side_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약물 부작용"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        android:background="@drawable/allergy_rounded_background"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/grid_food_allergies"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_drug_side_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="아목시실린"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_drug_side_effect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_drug_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_drug_side_effect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_drug_side_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="등록"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp"
            android:backgroundTint="#4285F4"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_drug_side_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삭제"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#F44336"
            android:textColor="#F44336"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_registered_allergies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="현재 등록된 정보가 없습니다."
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/layout_drug_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_confirm_allergy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4285F4"
        android:text="확인"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_registered_allergies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cornerRadius="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>