<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_rounded" android:padding="24dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인 정보 수정" android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_birthdate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_birthdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_birthdate_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:paddingVertical="8dp"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="년"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:paddingVertical="8dp"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:paddingVertical="8dp"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_blood_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈액형"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/layout_birthdate"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_blood_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background"
        android:paddingVertical="8dp"
        android:overlapAnchor="false"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tv_blood_type_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_blood_type"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/radio_group_background"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_gender_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="남성"
            android:textSize="16sp"
            android:textColor="@color/radio_button_text_color"
            android:background="@drawable/radio_button_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="여성"
            android:textSize="16sp"
            android:textColor="@color/radio_button_text_color"
            android:background="@drawable/radio_button_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingVertical="10dp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tv_emergency_contact_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비상 연락처"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/radio_group_gender"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_emergency_contact_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_contact1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:hint="010"
            android:background="@drawable/edittext_background_rounded"
            android:padding="12dp"
            android:maxLength="3"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/et_contact2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:hint="0000"
            android:background="@drawable/edittext_background_rounded"
            android:padding="12dp"
            android:maxLength="4"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/et_contact3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:hint="0000"
            android:background="@drawable/edittext_background_rounded"
            android:padding="12dp"
            android:maxLength="4"
            android:singleLine="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#4285F4"
        android:text="확인"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        app:cornerRadius="12dp" app:layout_constraintTop_toBottomOf="@id/layout_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>